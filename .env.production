# 生產環境配置
APP_NAME=耶穌的信 3.0
APP_VERSION=3.0.0
NODE_ENV=production
PORT=3001

# AI服務配置 - 請設置真實的API密鑰
GEMINI_API_KEY=your_production_gemini_api_key
OPENAI_API_KEY=your_production_openai_api_key

# 服務器配置
CORS_ORIGIN=https://jesus-letters-3-0.vercel.app
JWT_SECRET=your_strong_jwt_secret_for_production

# 速率限制配置（生產環境更嚴格）
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX_REQUESTS=5

# 日誌配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 生產模式配置
VITE_API_BASE_URL=https://jesus-letters-3-0.vercel.app/api
VITE_APP_NAME=耶穌的信 3.0
VITE_APP_VERSION=3.0.0

# 安全配置
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# 監控配置
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true
SENTRY_DSN=your_sentry_dsn_here

# 快取配置
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379