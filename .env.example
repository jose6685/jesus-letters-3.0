# 耶穌的信 3.0 - 環境變量配置

# 應用程序配置
NODE_ENV=development
PORT=3001

# AI服務配置
# Google Gemini API密鑰 (主要AI服務)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API密鑰 (備用AI服務)
OPENAI_API_KEY=your_openai_api_key_here

# 服務器配置
# CORS允許的來源 (多個來源用逗號分隔)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# 安全配置
# 用於簽名的密鑰
JWT_SECRET=your_jwt_secret_here

# 速率限制配置
# 通用速率限制 (每15分鐘的請求數)
RATE_LIMIT_GENERAL=100

# AI服務速率限制 (每分鐘的請求數)
RATE_LIMIT_AI=10

# 健康檢查速率限制 (每分鐘的請求數)
RATE_LIMIT_HEALTH=60

# 數據庫配置 (未來使用)
# Firebase配置
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# 日誌配置
LOG_LEVEL=debug

# 監控配置
# Sentry DSN (錯誤監控)
SENTRY_DSN=your_sentry_dsn_here

# 性能監控
PERFORMANCE_MONITORING=true

# 緩存配置
CACHE_TTL=3600

# 文件上傳配置
MAX_FILE_SIZE=10485760

# 電子郵件配置 (未來使用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# 第三方服務配置
# Google Analytics ID
GA_TRACKING_ID=your_ga_tracking_id

# 部署配置
# Netlify Functions配置
NETLIFY_FUNCTIONS_URL=https://your-site.netlify.app/.netlify/functions

# 開發配置
# 是否啟用調試模式
DEBUG=true

# 是否啟用API文檔
ENABLE_API_DOCS=true

# 測試配置
TEST_DATABASE_URL=your_test_database_url